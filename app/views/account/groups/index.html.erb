<h2>我加入的版块</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">版块名称</th>
			<th scope="col">版块描述</th>
			<th scope="col">创建人</th>
			<th scope="col">主题数量</th>

		</tr>
	</thead>
	<tbody>
		<%@myJoinedGoups.each do |g| %>
		<tr>
			<td><%= g.title %></td>
			<td><%= g.description %></td>
			<td><%= User.find(g.user_id).email %></td>
			<td><%= g.posts.count %></td>
			
		</tr>
		<%end %>
	</tbody>
</table>